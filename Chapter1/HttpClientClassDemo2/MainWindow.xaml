<Window x:Class="HttpClientClassDemo2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HttpClientClassDemo2"
        mc:Ignorable="d"
        Title="Using HttpClient"
        WindowStartupLocation="CenterScreen"
        Width="450"
        Height="350">

    <Grid Background="LightBlue">

        <!-- Rows definition -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- URL input area -->
        <StackPanel Grid.Row="0"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Orientation="Vertical">

            <Label Name="lblURL" Content="URL" />

            <TextBox Name="txtURL"
                     Height="25"
                     Text="http://www.contoso.com" />

            <Label Name="lbContent"
                   Content="HTML Source" />
        </StackPanel>

        <!-- HTML content -->
        <TextBox Grid.Row="1"
                 Name="txtContent"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 HorizontalScrollBarVisibility="Auto"
                 VerticalScrollBarVisibility="Visible" />

        <!-- Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top">

            <Button x:Name="btnViewHTML"
                    Width="80"
                    Margin="25,5"
                    Content="View HTML"
                    Click="btnViewHTML_Click" />

            <Button x:Name="btnClear"
                    Width="80"
                    Margin="25,5"
                    Content="Clear"
                    Click="btnClear_Click" />

            <Button x:Name="btnClose"
                    Width="80"
                    Margin="25,5"
                    Content="Close"
                    Click="btnClose_Click" />
        </StackPanel>

    </Grid>
</Window>
