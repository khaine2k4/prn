@model List<TravelDataAccess.Models.Trip>

<h2>Trip List</h2>

<p>
    <a class="btn btn-success" asp-action="Create">Add Trip</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Code</th>
            <th>Destination</th>
            <th>Price</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Code</td>
                <td>@t.Destination</td>
                <td>@t.Price</td>
                <td>@t.Status</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@t.TripId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>